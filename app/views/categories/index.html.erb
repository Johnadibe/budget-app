<section class="categories">
<%= render 'shared/header', :title => 'Categories' %>
  <ul class="list">
    <% @categories.each do |category| %>
      <li>
        <%= link_to category_transactions_path(category_id: category.id), id: "Group-#{category.id}" do %>
          <div>
            <div>
              <img src=<%= category.icon %> alt=<%= category.name %> />
            </div>
            <h2> <%= category.name %> </h2>
          </div>
          <p> $<%= category.total_amount %> </p>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Add New Category', new_category_path %>
</section>