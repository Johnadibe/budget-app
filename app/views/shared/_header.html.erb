<header class="flex p-5 sticky top-0 text-white bg-blue-400 justify-center z-20 box-border">
  <%= link_to '/', class: 'absolute left-3 top-1/3 px-2', id: 'Home' do %>
    <span class="fa-solid fa-circle-arrow-left text-2xl font-bold">
    </span>
  <% end %>
  <h2 class="text-xl xl:text-2xl uppercase text-light"><%= title %></h2>
  <% if user_signed_in? %>
    <%= link_to destroy_user_session_path, method: :delete, class: 'absolute right-0 bottom-0 h-full flex items-center px-2 box-border' do %>
      <span class="fa-solid fa-arrow-right-to-bracket text-2xl font-bold">
      </span>
    <% end %>
  <% end %>
</header>
